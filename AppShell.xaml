<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ProoiectVladSipos.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ProoiectVladSipos"
    xmlns:views="clr-namespace:ProoiectVladSipos.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ProoiectVladSipos">

    <TabBar>
        <ShellContent
            Title="Main"
            ContentTemplate="{DataTemplate local:MainPage}" />
        
        <ShellContent 
            Title="Users"
            Icon="users_icon.png"
            ContentTemplate="{DataTemplate views:UsersPage}" />

        <ShellContent 
            Title="Loans"
            ContentTemplate="{DataTemplate views:CreditsPage}" />
        
        <ShellContent 
        Title="Loan Types"
        ContentTemplate="{DataTemplate views:LoanTypesPage}" />
        
        <ShellContent
            Title="About"
            ContentTemplate="{DataTemplate local:AboutPage}" />
    </TabBar>

</Shell>
