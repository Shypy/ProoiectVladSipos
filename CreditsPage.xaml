<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProoiectVladSipos.CreditsPage"
             Title="Manage Credits">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Add Credit"
                     Clicked="OnAddCreditClicked" />
    </ContentPage.ToolbarItems>

    <StackLayout Padding="10" Spacing="10">
        <Label Text="Credits List"
               FontSize="Large"
               FontAttributes="Bold"
               HorizontalOptions="Center" />

        <ListView x:Name="CreditsListView"
                  ItemsSource="{Binding Credits}"
                  ItemSelected="OnCreditSelected"
                  Margin="10">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding LoanedAmount, Converter={StaticResource EuroSymbolConverter}}"
                              Detail="{Binding Date}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>
